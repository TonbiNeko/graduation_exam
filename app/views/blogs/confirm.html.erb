<h3>以下の内容でよろしいですか？</h3>

<%= form_with(model: @blog, url: blogs_path, local: true) do |form| %>

  <%= image_tag(@blog.image.url) if @blog.image && @blog.image.url %>
  <%= form.hidden_field :image_cache %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>
  <p>タイトル:<%= @blog.title %></p>
  <p>本文:<%= @blog.content %></p>

  <% @blog.blog_images.each do |blog_image| %>
    <%= image_tag(blog_image.image.url) if blog_image.image && blog_image.image.url %>
  <% end %>

  <%= form.fields_for :blog_images do |blog_image| %>
    <%= blog_image.hidden_field :image_cache %>
  <% end %>

  <%= form.submit  "みんなにシェア" %>
  <%= form.submit "戻る", name: 'back' %>
<% end %>


