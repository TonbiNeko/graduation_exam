<div class="like" >
  <% if @favorite.present? %>
    <%= link_to favorite_path(id: @favorite.id), method: :delete do %>
      <i class="fas fa-heart fa-lg heart"></i>
    <% end %>
    <%= @blog.favorite_users.count %>
  <% else %>
    <%= link_to favorites_path(blog_id: @blog.id), method: :post do %>
      <i class="far fa-heart fa-lg heart"></i>
    <% end %>
  <% end %>
</div>

<p>
  <strong>投稿者:</strong>
  <%= @blog.user.name %>
</p>

<p>
  <strong>タイトル:</strong>
  <%= @blog.title %>
</p>

<p>
  <strong>メイン画像:</strong>
  <%= image_tag @blog.image.url if @blog.image.url.present?%>
</p>

<p>
  <strong>内容:</strong>
  <%= @blog.content %>
</p>

<% if @blog_images.any? %>
  <% @blog_images.each.with_index do | blog_image, i | %>
    <h2>画像<%= i + 1 %></h2>
    
    <p>
      <%= image_tag(blog_image.image.url) %>
    </p>

  <% end %>
<% else %>
  <h2>写真は５枚投稿出来ます</h2>
<% end %>


<%= link_to '編集', edit_blog_path(@blog) %> |
<%= link_to '削除', blog_path(@blog), method: :delete, data: { confirm: '本当に削除してよろしいですか？' } %> |
<%= link_to '一覧画面', blogs_path %>


<div id="comments_area">
<%= render partial: 'comments/index', locals: { comments: @comments, blog: @blog } %>
</div>
<%= render partial: 'comments/form', locals: { comment: @comment, blog: @blog } %>
<%= link_to '編集', edit_blog_path(@blog) %> |
<%= link_to '戻る', blogs_path %>