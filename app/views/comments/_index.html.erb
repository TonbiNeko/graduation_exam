<div class="card">
  <div class="card-body">
    <ul>
      <% comments.each do |comment| %>
        <% if comment.id.present? %>
          <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
          <p><i class="fas fa-user-alt"></i><%= comment.user.name %></p>
          <p><%= comment.content %></p>
          <% if current_user == comment.user %>
            <p>
              <%= link_to "コメント編集", edit_blog_comment_path(blog, comment), remote: true, class: "btn btn-info" %>
              <%= link_to "コメント削除", blog_comment_path(comment.blog_id, comment.id), method: :delete, remote: true, data: { confirm: "本当に削除しますか?"}, class: "btn btn-outline-danger" %>
            </p>
          <% end %>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>